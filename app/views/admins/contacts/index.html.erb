<div class="contact-index-content">
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-md-offset-2 content_box">
				<h2 class="text-center">問い合わせ一覧</h2>
				<hr>
				<table  class="table table-hover table-inverse">
					<thead>
						<tr>
							<th>顧客名</th>
							<th>問い合わせタイトル</th>
							<th>受信日</th>
							<th class="col-md-1"></th>
							<th class="col-md-1"></th>
						</tr>
					</thead>
					<tbody>
						<% @users.each do |user| %>
							<% user.contact.each do |contact| %>
								<tr>
									<td><%= contact.user.name %><%= user.name %></td>
									<td><%= contact.title %></td>
									<td><%= contact.created_at.strftime("%Y年%m月%d日 ") %></td>
									<td><%= link_to "返信", edit_contact_path(contact) %></td>
									<td><%= link_to "削除", contact_path(contact), method: :delete %></td>
								</tr>
							<% end %>
						<% end %>
					</tbody>
				</table>
				<%= paginate @contacts, class: "pagenate" %>
			</div>
		</div>
	</div>
</div>