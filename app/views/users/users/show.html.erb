<section class="container clearfix">
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2 show-container">
			<div class="row">
				<div class="row" id="user_info_edit">
					<%= render 'users/users/user_info_edit', user: @user %>
				</div>

				<div class="col-md-12 mypage_list"></div>

				<div class="row">
					<div class="col-md-6 show_evnt">
						<%= render 'users/users/event', events: @events %>
					</div>
					<div class="col-md-6">
						<div class="mypage_recommend">
							<h3 class="text-center">あなたへのおすすめ</h3>
							<hr>
								<div class="row">
									<div class="col-md-6 recommend_item_left">
										<%= link_to users_item_path(@like_recommend.last.id) do %>
											<%= attachment_image_tag @like_recommend.last, :image, size: "140x140" %>
										<% end %>
									</div>
									<div class="col-md-6 recommend_item_right">
										<table class="table table-striped">
											<thead>
												<tr>
													<th>タイトル</th>
													<th><%= truncate(@like_recommend.last.name, length: 8) %></th>
												</tr>
												<tr>
													<th>感想</th>
													<th><%= truncate(@like_recommend.last.opinion, length: 8) %></th>
												</tr>
												<tr>
													<th>ユーザー</th>
													<th><%= attachment_image_tag @like_recommend.last.user, :profile_image, fallback: "no_image.jpg", class:"profile-img-circle", size: "20x20" %>
														<%= link_to users_user_path(@like_recommend.last.user_id) do %>
															@<%= truncate(@like_recommend.last.user.name, length: 5) %>
														<% end %>
													</th>
												</tr>
												<tr>
													<th>いいね</th>
													<th>
														<div id="item__show_like_<%= @like_recommend.last.id %>">
									             			<%= render 'users/items/show_like', item: @like_recommend.last %>
														</div>
													</th>
												</tr>
											</thead>
										</table>
									</div>
								</div>
								<div class="row">
									<canvas id="showRaderChart"></canvas>
									<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.js"></script>
						    	</div>
						</div>
					</div>
				</div>
				<div class="col-12 show_like">
					<h2 class="mypage_list">いいね一覧
						 <%= link_to  users_path(@user) do %><h6 class="more">もっと見る...</h6><% end %>
					</h2>
					<% @like_items.each do |like| %>
						<% item = Item.find_by(id: like.item_id) %>
							<div class="item_index">
								<div class="coffee_image">
									<%= link_to users_item_path(item) do %>
										<%= attachment_image_tag item, :image, size: "190x190" %>
									<% end %>
								</div>
								<div class="coffee_opinion">
									<%= truncate(item.name, length: 8) %>
								</div>
								<div class="row">
									<div class="col-md-8">
										<%= attachment_image_tag item.user, :profile_image, fallback: "no_image.jpg", class:"profile-img-circle", size: "40x40" %>
										<%= link_to users_user_path(item.user_id) do %>
											@<%= truncate(item.user.name, length: 5) %>
										<% end %>
									</div>
									<div class="col-md-4 item-like">
										<div class="item_like_<%= item.id %>">
										 	<%= render 'users/items/like', item: item %>
										</div>
									</div>
								</div>
							</div>
					<% end %>
				</div>
			</div>
			<%= link_to "新規投稿", new_users_taist_path, remote: true, class: "btn-circle-stitch" %>
				<div id="item-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
					<div class="modal-dialog">
	          			<div class="post_index_m modal-content">
	          			</div>
	       			</div>
   				</div>
		</div>
	</div>
</section>
<%= include_gon(:init => true) %>
<%= javascript_include_tag 'users/user_show.js' %>
<!--%= javascript_include_tag 'application.js' %-->