<!-- コーヒーマップのモーダルからの飛び先(コーヒーマップはヘッダーリンク:FIND) ------------------------------------------------>
<section class="container clearfix">
	<div class="row item_index_row">
		<div class="button type1">
			<h2 class="item_title">選択したコーヒー一覧</h2>
		</div>
			<div class="col-md-12">
				<% @taists.each do |taists| %>
					<% taists.items. each do |item| %>
					<div class="item_index">
						<div class="coffee_image">
							<%= link_to users_item_path(item) do %>
								<%= attachment_image_tag item, :image, size: "190x190" %>
							<% end %>
						</div>
						<div class="coffee_opinion">
							<%= item.name %>
						</div>
						<div class="row">
							<div class="col-md-8">
								<%= attachment_image_tag item.user, :profile_image, fallback: "no_image.jpg", class:"profile-img-circle", size: "40x40" %>
								@<%= link_to "#{item.user.name}", users_user_path(item.user_id) %>
							</div>
							<div class="col-md-4 item-like">
								<div class="item_like_<%= item.id %>">
								 	<%= render 'like', item: item %>
								</div>
						</div>
						</div>
					</div>
					<% end %>
				<% end %>
			</div>
			<%= paginate @taists, class: "pagenate" %>
		</div>
</section>