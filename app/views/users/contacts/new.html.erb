<div class="container clearfix">
  <div class="row">
    <div class="col-8 offset-2 content_box">
      <% if @contact.errors.any? %>
        <%= @contact.errors.count %>件のエラー。
        <% @contact.errors.full_messages.each do |message| %>
          <%= message %>。
        <% end %>
      <% end %>
      <h2 class="contact-title">お問い合わせフォーム</h2>
      <hr>
          <%= form_for @contact, url: users_contacts_path do |f| %>
            <%= f.label :タイトル, class:"contact-title-title" %>
            <%= f.text_field :title, class:"form-control contact-form-form" %>
            <hr>
            <%= f.label :内容, class:"contact-title-title" %>
            <%= f.text_field :body, class:"form-control contact-form-form" %>
            <hr>
            <%= f.submit "送信", class:"btn btn-lg btn-block btn-base-1 mt-20 btn-secondary" %>
          <% end %>
      </div>
  </div>
</div>
