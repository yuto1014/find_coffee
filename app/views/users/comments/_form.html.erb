<!-- コメント入力フォーム(投稿詳細に記載) ------------------------------------------------------------------>
<%= form_with(model: [item, comment], url: users_item_comments_path(@item) ) do |f| %>
    <%= f.text_area :content, class: "input-mysize" %>
    <%= f.submit "送信", class: "btn btn-outline-dark comment-submit float-right" %>
<% end %>