<div class="container">
    <div class="row">
       <div class="signup-container">
          <h2 class="text-center">ログイン</h2>
          <hr>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :メールアドレス %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"xxxx@xxx.com",class: "form-control" %>
            </div>
            <hr>

            <div class="field">
              <%= f.label :パスワード %><br />
              <%= f.password_field :password, autocomplete: "current-password", placeholder:"●●●●●●",class: "form-control" %>
            </div>
            <hr>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :保存する %>
              </div>
              <hr>
            <% end %>

            <div class="actions">
              <%= f.submit "ログイン",class: "btn-sm btn-danger form-control" %>
            </div>
            <hr>
          <% end %>

          <%- if devise_mapping.omniauthable? %>
            <%- resource_class.omniauth_providers.each do |provider| %>
              <%= link_to "#{OmniAuth::Utils.camelize(provider)}でログイン", omniauth_authorize_path(resource_name, provider), class: "btn btn-outline-primary" %><br />
            <% end %>
          <% end %>
          <hr>

          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "新規登録はこちら", new_registration_path(resource_name), class: "btn btn-outline-dark" %><br />
          <% end %><hr>

          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "パスワードを忘れましたか?", new_password_path(resource_name), class: "btn btn-outline-warning" %><br />
          <% end %>
        </div>
    </div>
</div>
