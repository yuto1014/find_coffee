<div class="container">
    <div class="row">
       <div class="col-md-4 col-md-offset-4">
          <h2>ログイン</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :メールアドレス %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"xxxx@xxx.com",class: "form-control" %>
            </div>

            <div class="field">
              <%= f.label :パスワード %><br />
              <%= f.password_field :password, autocomplete: "current-password", placeholder:"●●●●●●",class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :保存する %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "ログイン",class: "btn-sm btn-danger form-control" %>
            </div>
          <% end %>

          <%= render "users/shared/links" %>
        </div>
    </div>
</div>
