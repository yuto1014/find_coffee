<div class="container">
    <div class="row">
       <div class="signup-container">
			<h2 class="text-center">パスワードを忘れましたか?</h2>
			<hr>

			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			  <%= render "devise/shared/error_messages", resource: resource %>

			  <div class="field">
			    <%= f.label :email %><br />
			    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
			  </div>
			  <hr>

			  <div class="actions">
			    <%= f.submit "パスワードのリセット手順を送ります", class: "btn btn-outline-danger" %>
			  </div>
			  <hr>
			<% end %>

			<%- if controller_name != 'sessions' %>
			  <%= link_to "ログインはこちら", new_session_path(resource_name), class: "btn btn-outline-dark" %><br />
			<% end %>
			<hr>

			<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
			  <%= link_to "新規登録はこちら", new_registration_path(resource_name), class: "btn btn-outline-dark" %><br />
			<% end %>
		</div>
	</div>
</div>
