										<%= f.hidden_field :body, :value => 1, disabled: "disabled", class: 'hidden4' %>
										<%= f.hidden_field :fruity, :value => 2, disabled: "disabled", class: 'hidden4' %>
									</div>
									<div class="bitter_content1">
										<%= f.radio_button :refresh, 3, class: "radio_btn", id: 'refresh5' %>
										<%= f.label '✔︎', for: 'refresh5' %>
										<%= f.hidden_field :bitter, :value => 2, disabled: "disabled", class: 'hidden5' %>
										<%= f.hidden_field :body, :value => 0, disabled: "disabled", class: 'hidden5' %>
										<%= f.hidden_field :fruity, :value => 1, disabled: "disabled", class: 'hidden5' %>
									</div>
									<div class="bitter_content2">
										<%= f.radio_button :refresh, 3, class: "radio_btn", id: 'refresh6' %>
