<!-- 新規投稿(親:taist/子:item => cocoon使用) ------------------------------------------------------------------>
<section class="container clearfix">
	<div class="modal-dialog" role="document">
		<div class="modal-content" id="taist_new">
				<div class="modal-header">
					<h3 class="modal-title">新規投稿
					<a class="js-modal-close" href="">✖︎</a>
					</h3>
				</div>
					<div class="modal-body">
						<%= form_for(@taist, url: users_taists_path, remote: true) do |f| %>
							<div id="create_error">
								<%= render 'layouts/error_message', model: f.object %>
							</div>
							<%= f.fields_for :items do |item| %>
								<%= render 'item_fields', f: item %>
							<% end %>
<!-- 保存したデータを基に投稿詳細でチャートを表示する(refresh/bitter/body/fruity) ----------------------------------->
							<h5>コーヒーマップ</h5>
							<div class="taist-box">
	  							<div class="taist-index">
									<div class="refresh_content1">
										<%= f.radio_button :refresh, 3, class: "radio_btn", id: 'refresh1' %>
										<%= f.label '✔︎', for: 'refresh1' %>
											<%= f.hidden_field :bitter, :value => 0, disabled: "disabled", class: 'hidden1' %>
											<%= f.hidden_field :body, :value => 0, disabled: "disabled", class: 'hidden1' %>
											<%= f.hidden_field :fruity, :value => 3, disabled: "disabled", class: 'hidden1' %>
									</div>
									<div class="refresh_content2">
										<%= f.radio_button :refresh, 3, class: "radio_btn", id: 'refresh2' %>
										<%= f.label '✔︎', for: 'refresh2' %>
										<%= f.hidden_field :bitter, :value => 1, disabled: "disabled", class: 'hidden2' %>
										<%= f.hidden_field :body, :value => 0, disabled: "disabled", class: 'hidden2' %>
										<%= f.hidden_field :fruity, :value => 2, disabled: "disabled", class: 'hidden2' %>
									</div>
									<div class="refresh_content3">
										<%= f.radio_button :refresh, 2, class: "radio_btn", id: 'refresh3' %>
										<%= f.label '✔︎', for: 'refresh3' %>
