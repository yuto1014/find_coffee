										<%= f.hidden_field :body, :value => 1, disabled: "disabled", class: 'hidden3' %>
										<%= f.hidden_field :fruity, :value => 3, disabled: "disabled", class: 'hidden3' %>
									</div>
									<div class="refresh_content4">
										<%= f.radio_button :refresh, 2, class: "radio_btn", id: 'refresh4' %>
										<%= f.label '✔︎', for: 'refresh4' %>
