										<%= f.label '✔︎', for: 'refresh15' %>
										<%= f.hidden_field :bitter, :value => 2, disabled: "disabled", class: 'hidden15' %>
										<%= f.hidden_field :body, :value => 3, disabled: "disabled", class: 'hidden15' %>
										<%= f.hidden_field :fruity, :value => 1, disabled: "disabled", class: 'hidden15' %>
									</div>
									<div class="fruity_content4">
										<%= f.radio_button :refresh, 0, class: "radio_btn", id: 'refresh16' %>
										<%= f.label '✔︎', for: 'refresh16' %>
										<%= f.hidden_field :bitter, :value => 3, disabled: "disabled", class: 'hidden16' %>
										<%= f.hidden_field :body, :value => 3, disabled: "disabled", class: 'hidden16' %>
										<%= f.hidden_field :fruity, :value => 0, disabled: "disabled", class: 'hidden16'%>
									</div>
									<div class="map-title-top">スッキリ</div>
									<div class="map-title-right">ビター</div>
									<div class="map-title-bottom">コク</div>
									<div class="map-title-left">フルーティ</div>
								</div>
							</div>
							<div class="modal-footer">
						<%= f.submit "保存", class:"form-control" %>
					</div>
					<% end %>
					</div>

		</div>
	</div>
</section>
<%= javascript_include_tag 'users/taist_new.js' %>